<%- include('../includes/head.ejs') %> 
</head>
<body>
    <%- include('../includes/navigation.ejs') %> 
    <main>
        <h1>This is the shop index</h1>
        <h1>My Products</h1>
        <p>List of all the products...</p>
        <% if (prods.length>0) { %> 
        <div class="grid">
            <% prods.forEach(product => { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title%></h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imageUrl %> " alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$ <%= product.price %></h2>
                <p class="product__description"><% if(product.description==""){ %> No description added <% }else{ %> <%= product.description %><% } %> </p>
                </div>
                <form action="/cart/add-product" class="card__actions">
                    <button class="btn">Add to Cart</button>
                </form>
            </article>
            <% }) %> 
        </div>
        <% }else{ %> 
        <h1>No products found</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs')%>